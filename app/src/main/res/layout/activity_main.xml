<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ee5415.welcomecard.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/malaysia_1" />


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#D9B29C"
        android:padding="16dp"
        android:text="Malaysia"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/chinese_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#7592BB"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="32dp"
        android:padding="8dp"
        android:text="Chinese"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/malay_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chinese_text_view"
        android:layout_alignParentBottom="true"
        android:background="#7592BB"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp"
        android:padding="8dp"
        android:text="Malay"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/indian_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="32dp"
        android:layout_toRightOf="@id/malay_text_view"
        android:layout_alignParentBottom="true"
        android:background="#7592BB"
        android:text="Indian"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="italic" />

</RelativeLayout>
